{
  "compilerOptions": {
    "noEmit": false,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "types",
    "typeRoots": [
      "node_modules/@types/",
      "typings.d.ts"
    ]
  },
  "exclude": [
    "**/__tests__/*"
  ]
}
