{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "pretty": true,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types/",
      "typings.d.ts"
    ]
  },
  "exclude": [
    "old/**/*",
    "src/utils/tests.ts",
    "**/__tests__/*"
  ]
}
